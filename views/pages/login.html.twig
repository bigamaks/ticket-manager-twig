{% extends "layouts/base.html.twig" %}

{% block title %}Login - Clear Desk{% endblock %}

{% block header %}
    {% include 'components/header.html.twig' %}
{% endblock %}

{% block content %}
<div class="min-h-screen flex flex-col bg-gray-50">
    <main class="flex-1 flex items-center justify-center px-4 py-12 relative overflow-hidden">
        <!-- Wavy Background at bottom -->
        <div class="absolute bottom-0 left-0 right-0 transform translate-y-1">
            <svg class="w-full h-24 text-gray-100" viewBox="0 0 1440 120" preserveAspectRatio="none" fill="currentColor">
                <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".25"></path>
                <path d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z" opacity=".5"></path>
                <path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z"></path>
            </svg>
        </div>

        <!-- Multiple Decorative Circles -->
        <div class="absolute top-20 -right-20 w-64 h-64 bg-blue-100 rounded-full opacity-30"></div>
        <div class="absolute bottom-20 -left-16 w-48 h-48 bg-purple-100 rounded-full opacity-40"></div>
        <div class="absolute top-1/3 left-1/4 w-32 h-32 bg-blue-50 rounded-full opacity-50"></div>

        <!-- 1440px Container -->
        <div class="max-w-[1440px] mx-auto w-full flex items-center justify-center relative z-10">
            <!-- Login Card -->
            <div class="w-full max-w-md bg-white rounded-2xl shadow-lg border-0">
                <div class="p-8">
                    <!-- Header -->
                    <div class="text-center mb-8">
                        <div class="flex items-center gap-3 justify-center mb-4">
                            <div class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                </svg>
                            </div>
                            <span class="text-2xl font-bold text-gray-900">Clear Desk</span>
                        </div>
                        <h1 class="text-2xl font-bold text-gray-900 mb-2">Welcome Back</h1>
                        <p class="text-gray-600">Sign in to manage your tickets and track progress</p>
                    </div>

                    <!-- Error Messages -->
                    {% if errors is defined and errors is not empty %}
                        <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
                            <div class="flex items-center gap-2 text-red-700 font-medium mb-2">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                Please fix the following errors:
                            </div>
                            <ul class="text-red-600 text-sm list-disc list-inside space-y-1">
                                {% for error in errors %}
                                    <li>{{ error }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}

                    {% if auth_error is defined and auth_error %}
                        <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
                            <div class="flex items-center gap-2 text-red-700 font-medium">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                {{ auth_error }}
                            </div>
                        </div>
                    {% endif %}

                    <!-- Login Form -->
                    <form class="space-y-6" action="/login" method="POST">
                        <div class="space-y-4">
                            <!-- Email Field -->
                            <div>
                                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                                    Email Address
                                </label>
                                <input id="email" name="email" type="email" required
                                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors placeholder-gray-400"
                                       placeholder="your@email.com" 
                                       value="{{ email ?? '' }}"
                                       {% if errors.email is defined %}aria-invalid="true" aria-describedby="email-error"{% endif %}>
                                {% if errors.email is defined %}
                                    <p id="email-error" class="mt-2 text-sm text-red-600">{{ errors.email }}</p>
                                {% endif %}
                            </div>
                            
                            <!-- Password Field -->
                            <div>
                                <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
                                    Password
                                </label>
                                <input id="password" name="password" type="password" required
                                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors placeholder-gray-400"
                                       placeholder="Enter your password"
                                       {% if errors.password is defined %}aria-invalid="true" aria-describedby="password-error"{% endif %}>
                                {% if errors.password is defined %}
                                    <p id="password-error" class="mt-2 text-sm text-red-600">{{ errors.password }}</p>
                                {% endif %}
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit"
                                class="w-full bg-blue-600 text-white py-3 px-4 rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-200 font-medium transition-colors shadow-lg hover:shadow-xl">
                            Sign In to Dashboard
                        </button>

                        <!-- Sign Up Link -->
                        <div class="text-center pt-4">
                            <p class="text-gray-600 text-sm">
                                Don't have an account?
                                <a href="/signup" class="text-blue-600 hover:text-blue-700 font-medium underline transition-colors">
                                    Create account
                                </a>
                            </p>
                        </div>
                    </form>

                    <!-- Demo Credentials -->
                    <div class="mt-8 p-4 bg-blue-50 border border-blue-200 rounded-lg">
                        <div class="flex items-center gap-2 text-blue-800 font-medium mb-2">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            Demo Credentials
                        </div>
                        <div class="text-sm text-blue-700 space-y-1">
                            <p><strong>Email:</strong> john@example.com</p>
                            <p><strong>Password:</strong> password123</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}

{% block footer %}
    {% include 'components/footer.html.twig' %}
{% endblock %}