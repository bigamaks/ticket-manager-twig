{% extends 'layouts/base.html.twig' %}

{% block header %}
    {% include 'components/header.html.twig' %}
{% endblock %}

{% block content %}
<div class="min-h-screen flex flex-col bg-gray-50">
    <main class="flex-1 px-4 sm:px-6 lg:px-8 py-8">
        <!-- Wavy Background at bottom -->
        <div class="absolute bottom-0 left-0 right-0 transform translate-y-1">
            <svg class="w-full h-24 text-gray-100" viewBox="0 0 1440 120" preserveAspectRatio="none" fill="currentColor">
                <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".25"></path>
                <path d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z" opacity=".5"></path>
                <path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z"></path>
            </svg>
        </div>

        <!-- Decorative Circles -->
        <div class="absolute top-20 -right-20 w-64 h-64 bg-blue-100 rounded-full opacity-30"></div>
        <div class="absolute bottom-20 -left-16 w-48 h-48 bg-purple-100 rounded-full opacity-40"></div>

        <!-- 1440px Container -->
        <div class="max-w-[1440px] mx-auto relative z-10">
            <!-- Header Section -->
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8">
                <div class="mb-4 sm:mb-0">
                    <h1 class="text-3xl font-bold text-gray-900">Ticket Management</h1>
                    <p class="text-gray-600 mt-2">Manage and track all your support tickets efficiently</p>
                </div>
                <button 
                    onclick="openCreateModal()"
                    class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 font-medium shadow-lg hover:shadow-xl transition-all flex items-center gap-2"
                >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                    Create Ticket
                </button>
            </div>

            <!-- Statistics Overview -->
            {% set totalTickets = tickets|length %}
            {% set openTickets = tickets|filter(t => t.status == 'open')|length %}
            {% set inProgressTickets = tickets|filter(t => t.status == 'in_progress')|length %}
            {% set closedTickets = tickets|filter(t => t.status == 'closed')|length %}

            <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
                <div class="bg-white rounded-xl shadow-lg border-0 p-4 text-center">
                    <div class="text-2xl font-bold text-blue-600">{{ totalTickets }}</div>
                    <div class="text-gray-600 text-sm">Total Tickets</div>
                </div>
                <div class="bg-white rounded-xl shadow-lg border-0 p-4 text-center">
                    <div class="text-2xl font-bold text-green-600">{{ openTickets }}</div>
                    <div class="text-gray-600 text-sm">Open</div>
                </div>
                <div class="bg-white rounded-xl shadow-lg border-0 p-4 text-center">
                    <div class="text-2xl font-bold text-amber-600">{{ inProgressTickets }}</div>
                    <div class="text-gray-600 text-sm">In Progress</div>
                </div>
                <div class="bg-white rounded-xl shadow-lg border-0 p-4 text-center">
                    <div class="text-2xl font-bold text-gray-600">{{ closedTickets }}</div>
                    <div class="text-gray-600 text-sm">Resolved</div>
                </div>
            </div>

            <!-- Success/Error Messages -->
            {% if app.request.get('success') %}
            <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg mb-6 flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Ticket operation completed successfully!
            </div>
            {% endif %}

            {% if errors is defined and errors is not empty %}
            <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-6 flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <div>
                    {% for error in errors %}
                        <p>{{ error }}</p>
                    {% endfor %}
                </div>
            </div>
            {% endif %}

            <!-- Tickets List -->
            {% if tickets|length > 0 %}
            <div class="space-y-6">
                {% for ticket in tickets %}
                <div class="bg-white border-0 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 p-6">
                    <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center gap-4">
                        <div class="flex-1 min-w-0">
                            <div class="flex flex-wrap items-center gap-3 mb-3">
                                <h3 class="text-xl font-semibold text-gray-900 truncate">{{ ticket.title }}</h3>
                                <span class="px-3 py-1 rounded-full text-sm font-medium border 
                                    {% if ticket.status == 'open' %}bg-green-100 text-green-800 border-green-200
                                    {% elseif ticket.status == 'in_progress' %}bg-amber-100 text-amber-800 border-amber-200
                                    {% else %}bg-gray-100 text-gray-800 border-gray-200{% endif %}">
                                    {{ ticket.status == 'in_progress' ? 'In Progress' : ticket.status|title }}
                                </span>
                                <span class="px-3 py-1 rounded-full text-sm font-medium border 
                                    {% if ticket.priority == 'high' %}bg-red-100 text-red-800 border-red-200
                                    {% elseif ticket.priority == 'medium' %}bg-yellow-100 text-yellow-800 border-yellow-200
                                    {% else %}bg-gray-100 text-gray-800 border-gray-200{% endif %}">
                                    {{ ticket.priority|title }}
                                </span>
                            </div>
                            
                            <p class="text-gray-600 mb-4 leading-relaxed">
                                {{ ticket.description ?: 'No description provided' }}
                            </p>
                            
                            <div class="flex items-center gap-4 text-sm text-gray-500">
                                <span class="flex items-center gap-1">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                    </svg>
                                    {{ ticket.createdAt|date('M j, Y g:i A') }}
                                </span>
                                <span>â€¢</span>
                                <span>ID: {{ ticket.id|slice(-8) }}</span>
                            </div>
                        </div>
                        
                        <div class="flex gap-3 flex-shrink-0">
                            <button 
                                onclick="editTicket({{ ticket|json_encode }})"
                                class="px-4 py-2 text-sm border border-blue-600 text-blue-600 rounded-lg hover:bg-blue-50 font-medium transition-colors flex items-center gap-2"
                            >
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                </svg>
                                Edit
                            </button>
                            <button 
                                onclick="deleteTicket('{{ ticket.id }}')"
                                class="px-4 py-2 text-sm bg-red-600 text-white rounded-lg hover:bg-red-700 font-medium transition-colors flex items-center gap-2"
                            >
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                </svg>
                                Delete
                            </button>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            {% else %}
            <!-- Empty State -->
            <div class="text-center py-16 bg-white rounded-2xl shadow-lg border-0">
                <div class="w-24 h-24 text-gray-300 mx-auto mb-6">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-full h-full">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                </div>
                <h3 class="text-2xl font-bold text-gray-900 mb-3">No tickets yet</h3>
                <p class="text-gray-600 mb-6 text-lg max-w-md mx-auto">
                    Get started by creating your first support ticket. Track issues, manage priorities, and resolve problems efficiently.
                </p>
                <button 
                    onclick="openCreateModal()"
                    class="bg-blue-600 text-white px-8 py-4 rounded-lg hover:bg-blue-700 font-medium text-lg shadow-lg hover:shadow-xl transition-all flex items-center gap-2 mx-auto"
                >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                    Create Your First Ticket
                </button>
            </div>
            {% endif %}
        </div>
    </main>

    <!-- Ticket Modal -->
    <div id="ticketModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50 p-4">
        <div class="bg-white rounded-2xl shadow-2xl w-full max-w-md max-h-[90vh] overflow-y-auto" onclick="event.stopPropagation()">
            <div class="p-6">
                <h2 class="text-2xl font-bold text-gray-900 mb-4" id="modalTitle">Create New Ticket</h2>
                
                <form id="ticketForm" method="POST" action="/tickets" class="space-y-4">
                    <input type="hidden" name="action" value="create_ticket">
                    <input type="hidden" id="ticketId" name="id">
                    
                    <div>
                        <label for="ticketTitle" class="block text-sm font-medium text-gray-700 mb-2">
                            Title <span class="text-red-500">*</span>
                        </label>
                        <input
                            id="ticketTitle"
                            name="title"
                            type="text"
                            placeholder="Enter ticket title"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                            required
                        />
                    </div>

                    <div>
                        <label for="ticketDescription" class="block text-sm font-medium text-gray-700 mb-2">Description</label>
                        <textarea
                            id="ticketDescription"
                            name="description"
                            placeholder="Enter ticket description (optional)"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                            rows="4"
                        ></textarea>
                    </div>

                    <div>
                        <label for="ticketStatus" class="block text-sm font-medium text-gray-700 mb-2">
                            Status <span class="text-red-500">*</span>
                        </label>
                        <select
                            id="ticketStatus"
                            name="status"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                            required
                        >
                            <option value="">Select Status</option>
                            <option value="open">Open</option>
                            <option value="in_progress">In Progress</option>
                            <option value="closed">Closed</option>
                        </select>
                    </div>

                    <div>
                        <label for="ticketPriority" class="block text-sm font-medium text-gray-700 mb-2">Priority</label>
                        <select
                            id="ticketPriority"
                            name="priority"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                        >
                            <option value="low">Low</option>
                            <option value="medium" selected>Medium</option>
                            <option value="high">High</option>
                        </select>
                    </div>

                    <div class="flex gap-3 justify-end pt-4 border-t border-gray-200">
                        <button
                            type="button"
                            onclick="closeModal()"
                            class="px-6 py-3 text-gray-600 border border-gray-300 rounded-lg hover:bg-gray-50 font-medium transition-colors"
                        >
                            Cancel
                        </button>
                        <button
                            type="submit"
                            class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium transition-colors shadow-lg hover:shadow-xl"
                        >
                            Create Ticket
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
// Ticket management functions
function openCreateModal() {
    document.getElementById('modalTitle').textContent = 'Create New Ticket';
    document.getElementById('ticketForm').reset();
    document.getElementById('ticketId').value = '';
    document.getElementById('ticketForm').querySelector('button[type="submit"]').textContent = 'Create Ticket';
    document.getElementById('ticketForm').action = '/tickets';
    document.getElementById('ticketForm').querySelector('input[name="action"]').value = 'create_ticket';
    document.getElementById('ticketModal').classList.remove('hidden');
    document.getElementById('ticketModal').classList.add('flex');
}

function editTicket(ticket) {
    document.getElementById('modalTitle').textContent = 'Edit Ticket';
    document.getElementById('ticketId').value = ticket.id;
    document.getElementById('ticketTitle').value = ticket.title;
    document.getElementById('ticketDescription').value = ticket.description || '';
    document.getElementById('ticketStatus').value = ticket.status;
    document.getElementById('ticketPriority').value = ticket.priority;
    document.getElementById('ticketForm').querySelector('button[type="submit"]').textContent = 'Update Ticket';
    document.getElementById('ticketForm').action = '/tickets';
    document.getElementById('ticketForm').querySelector('input[name="action"]').value = 'update_ticket';
    document.getElementById('ticketModal').classList.remove('hidden');
    document.getElementById('ticketModal').classList.add('flex');
}

function closeModal() {
    document.getElementById('ticketModal').classList.add('hidden');
    document.getElementById('ticketModal').classList.remove('flex');
}

function deleteTicket(ticketId) {
    if (confirm('Are you sure you want to delete this ticket? This action cannot be undone.')) {
        // Create a form to submit the delete request
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/tickets';
        
        const actionInput = document.createElement('input');
        actionInput.type = 'hidden';
        actionInput.name = 'action';
        actionInput.value = 'delete_ticket';
        
        const idInput = document.createElement('input');
        idInput.type = 'hidden';
        idInput.name = 'id';
        idInput.value = ticketId;
        
        form.appendChild(actionInput);
        form.appendChild(idInput);
        document.body.appendChild(form);
        form.submit();
    }
}

// Close modal when clicking outside
document.getElementById('ticketModal').addEventListener('click', closeModal);

// Add form validation
document.getElementById('ticketForm').addEventListener('submit', function(e) {
    const title = document.getElementById('ticketTitle').value.trim();
    const status = document.getElementById('ticketStatus').value;
    
    if (!title) {
        e.preventDefault();
        alert('Please enter a ticket title');
        document.getElementById('ticketTitle').focus();
        return;
    }
    
    if (!status) {
        e.preventDefault();
        alert('Please select a status');
        document.getElementById('ticketStatus').focus();
        return;
    }
});
</script>
{% endblock %}

