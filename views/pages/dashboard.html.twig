{% extends 'layouts/base.html.twig' %}

{% block header %}
    {% include 'components/header.html.twig' %}
{% endblock %}

{% block content %}
<div class="min-h-screen flex flex-col bg-gray-50">
    <main class="flex-1 py-8">
        <!-- Wavy Background at bottom -->
        <div class="absolute bottom-0 left-0 right-0 transform translate-y-1">
            <svg class="w-full h-24 text-gray-100" viewBox="0 0 1440 120" preserveAspectRatio="none" fill="currentColor">
                <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".25"></path>
                <path d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z" opacity=".5"></path>
                <path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z"></path>
            </svg>
        </div>

        <!-- Decorative Circles -->
        <div class="absolute top-20 -right-20 w-64 h-64 bg-blue-100 rounded-full opacity-30"></div>
        <div class="absolute bottom-20 -left-16 w-48 h-48 bg-purple-100 rounded-full opacity-40"></div>
        <div class="absolute top-1/3 left-1/4 w-32 h-32 bg-blue-50 rounded-full opacity-50"></div>

        <!-- 1440px Container -->
        <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
            <!-- Welcome Section -->
            <div class="text-center mb-12">
                <h1 class="text-4xl font-bold text-gray-900 mb-4">Welcome, {{ user.name ?? 'User' }} ðŸ‘‹</h1>
                <p class="text-gray-600 text-lg">
                    Manage your tickets and track progress easily.
                </p>
            </div>

            {# Calculate statistics #}
            {% set totalTickets = tickets|length %}
            {% set openTickets = tickets|filter(t => t.status == 'open')|length %}
            {% set inProgressTickets = tickets|filter(t => t.status == 'in_progress')|length %}
            {% set closedTickets = tickets|filter(t => t.status == 'closed')|length %}
            {% set recentTickets = tickets|sort((a, b) => b.createdAt <=> a.createdAt)|slice(0, 5) %}

            <!-- Statistics Cards -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
                <!-- Total Tickets -->
                <div class="bg-white rounded-2xl shadow-lg border-0 p-6 text-center hover:shadow-xl transition-shadow">
                    <div class="text-3xl font-bold text-blue-600 mb-2" aria-live="polite">
                        {{ totalTickets }}
                    </div>
                    <div class="text-gray-600 font-medium">Total Tickets</div>
                </div>

                <!-- Open Tickets -->
                <div class="bg-white rounded-2xl shadow-lg border-0 p-6 text-center hover:shadow-xl transition-shadow">
                    <div class="text-3xl font-bold text-green-600 mb-2" aria-live="polite">
                        {{ openTickets }}
                    </div>
                    <div class="text-gray-600 font-medium">Open Tickets</div>
                </div>

                <!-- In Progress Tickets -->
                <div class="bg-white rounded-2xl shadow-lg border-0 p-6 text-center hover:shadow-xl transition-shadow">
                    <div class="text-3xl font-bold text-amber-600 mb-2" aria-live="polite">
                        {{ inProgressTickets }}
                    </div>
                    <div class="text-gray-600 font-medium">In Progress</div>
                </div>

                <!-- Closed Tickets -->
                <div class="bg-white rounded-2xl shadow-lg border-0 p-6 text-center hover:shadow-xl transition-shadow">
                    <div class="text-3xl font-bold text-gray-600 mb-2" aria-live="polite">
                        {{ closedTickets }}
                    </div>
                    <div class="text-gray-600 font-medium">Resolved Tickets</div>
                </div>
            </div>

            <!-- Recent Tickets Section -->
            {% if recentTickets|length > 0 %}
            <div class="bg-white rounded-2xl shadow-lg border-0 mb-8">
                <div class="p-6 border-b border-gray-200">
                    <h2 class="text-2xl font-bold text-gray-900">Recent Tickets</h2>
                </div>
                <div class="p-6">
                    <div class="space-y-4" role="list" aria-label="Recent tickets">
                        {% for ticket in recentTickets %}
                        <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
                            <div class="flex-1 min-w-0 mb-3 sm:mb-0">
                                <h3 class="font-semibold text-gray-900 text-lg mb-1">{{ ticket.title }}</h3>
                                <p class="text-gray-600 text-sm">
                                    {{ ticket.description ? (ticket.description|slice(0, 80) ~ (ticket.description|length > 80 ? '...' : '')) : 'No description provided' }}
                                </p>
                                <div class="flex flex-wrap gap-2 mt-2">
                                    {# Status Badge #}
                                    <span class="px-3 py-1 rounded-full text-sm font-medium border 
                                        {% if ticket.status == 'open' %}bg-green-100 text-green-800 border-green-200
                                        {% elseif ticket.status == 'in_progress' %}bg-amber-100 text-amber-800 border-amber-200
                                        {% else %}bg-gray-100 text-gray-800 border-gray-200{% endif %}"
                                        aria-label="Status: {{ ticket.status == 'in_progress' ? 'In Progress' : ticket.status }}">
                                        {{ ticket.status == 'in_progress' ? 'In Progress' : ticket.status|title }}
                                    </span>
                                    
                                    {# Priority Badge #}
                                    <span class="px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800 border border-blue-200"
                                        aria-label="Priority: {{ ticket.priority }}">
                                        {{ ticket.priority|title }}
                                    </span>
                                </div>
                            </div>
                            <div class="flex items-center gap-4 sm:ml-4">
                                <time class="text-sm text-gray-500 whitespace-nowrap" datetime="{{ ticket.createdAt }}">
                                    {{ ticket.createdAt|date('M j, Y') }}
                                </time>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    
                    {% if tickets|length > 5 %}
                    <div class="text-center mt-6">
                        <a href="/tickets" class="text-blue-600 hover:text-blue-500 font-medium border border-blue-600 hover:bg-blue-50 px-6 py-2 rounded-lg focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors inline-block">
                            View All Tickets â†’
                        </a>
                    </div>
                    {% endif %}
                </div>
            </div>
            {% endif %}

            <!-- Quick Actions -->
            <div class="bg-white rounded-2xl shadow-lg border-0 mb-8">
                <div class="p-6 border-b border-gray-200">
                    <h2 class="text-2xl font-bold text-gray-900">Quick Actions</h2>
                </div>
                <div class="p-6">
                    <div class="flex flex-col sm:flex-row gap-4 justify-center">
                        <a href="/tickets" class="flex-1 max-w-xs bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 font-medium text-center focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors">
                            Manage Tickets
                        </a>
                        <a href="/tickets?create=new" class="flex-1 max-w-xs bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 font-medium text-center focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition-colors flex items-center justify-center gap-2">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                            </svg>
                            Create New Ticket
                        </a>
                        <a href="/logout" class="flex-1 max-w-xs bg-gray-600 text-white px-6 py-3 rounded-lg hover:bg-gray-700 font-medium text-center focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors">
                            Logout
                        </a>
                    </div>
                </div>
            </div>

            <!-- Empty State -->
            {% if tickets|length == 0 %}
            <div class="bg-white rounded-2xl shadow-lg border-0 text-center py-16">
                <div class="p-6">
                    <div class="w-16 h-16 text-gray-400 mx-auto mb-4 opacity-50" aria-hidden="true">
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-16 h-16">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                        </svg>
                    </div>
                    <h2 class="text-xl font-semibold text-gray-900 mb-2">No tickets yet</h2>
                    <p class="text-gray-600 mb-6 max-w-md mx-auto">
                        Get started by creating your first support ticket. Track issues, manage priorities, and resolve problems efficiently.
                    </p>
                    <a href="/tickets?create=new" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 font-medium focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors inline-flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                        </svg>
                        Create Your First Ticket
                    </a>
                </div>
            </div>
            {% endif %}
        </div>
    </main>
</div>
{% endblock %}

{% block footer %}
    {% include 'components/footer.html.twig' %}
{% endblock %}